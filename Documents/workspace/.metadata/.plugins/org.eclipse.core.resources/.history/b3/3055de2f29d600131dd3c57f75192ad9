package edu.ucsd.cse110.server.db;

import java.io.Serializable;
import java.util.ArrayList;
import java.util.List;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.Id;

@Entity
public class UserFriends implements Serializable {

	private static final long serialVersionUID = 1L;
	
	@Id @GeneratedValue
	public Integer getId() { return id; }
	public void setId(Integer id) { this.id = id; }
	private Integer id;
	
	@Column(name="dataName")
	public String getName() {return name;}
	public void setName(String name) {this.name = name;}
	private String name;
	
	public List<String> getFriends() {return listOfFriends;}
	public void addFriend(String friendName) {this.listOfFriends.add(friendName);}
	private List<String> listOfFriends;
	
	public UserFriends() {	}
	
	public UserFriends(String name) {
		this.name = name;
		this.listOfFriends = new ArrayList<String>();
		
	}

	@Override
	public String toString() {
		return "DataElement [id=" + id + ", name=" + name + ", listOfFriends="
				+ listOfFriends + "]";
	}	
}
